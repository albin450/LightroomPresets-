{
  "name": "lightroom-preset",
  "version": "0.1.0",
  "description": "A TypeScript API for generating presets for Adobe Lightroom.",
  "bugs": {
    "url": "https://github.com/clebert/lightroom-preset/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/lightroom-preset.git"
  },
  "license": "MIT",
  "author": "Clemens Akens <clebert@me.com>",
  "sideEffects": false,
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "node generate-schema-types.js",
    "build": "run-p build:*",
    "build:cjs": "tsc --project tsconfig.cjs.json --incremental --pretty",
    "build:esm": "tsc --project tsconfig.esm.json --incremental --pretty",
    "ci": "run-p format:test lint test build",
    "format": "prettier --write '**/*.{html,js,json,md,ts,tsx,yml}'",
    "format:test": "prettier --list-different '**/*.{html,js,json,md,ts,tsx,yml}'",
    "lint": "eslint src/**/*.ts",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "start": "node example.js",
    "test": "jest"
  },
  "dependencies": {
    "@prettier/plugin-xml": "^1.0.2",
    "ajv": "^8.6.2",
    "prettier": "^2.3.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.1",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.0.6",
    "json-schema-to-typescript": "^10.1.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.3.5"
  }
}
