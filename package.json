{
  "name": "lightroom-preset",
  "version": "0.1.0",
  "description": "A TypeScript API for generating presets for Adobe Lightroom.",
  "bugs": {
    "url": "https://github.com/clebert/lightroom-preset/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/lightroom-preset.git"
  },
  "license": "MIT",
  "author": "Clemens Akens <clebert@me.com>",
  "sideEffects": false,
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "preci": "run-s setup",
    "ci": "run-p compile fmt:check lint test",
    "postci": "run-s start",
    "precompile": "node generate-schema-types.js",
    "compile": "onecmd compile",
    "fmt": "onecmd fmt",
    "fmt:check": "onecmd fmt --check",
    "lint": "onecmd lint",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "setup": "onecmd setup",
    "start": "node example.js",
    "test": "onecmd test"
  },
  "dependencies": {
    "@prettier/plugin-xml": "^1.0.2",
    "ajv": "^8.6.2",
    "prettier": "^2.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@onecmd/standard-plugins": "^0.10.0",
    "@types/uuid": "^8.3.1",
    "json-schema-to-typescript": "^10.1.4",
    "npm-run-all": "^4.1.5"
  }
}
